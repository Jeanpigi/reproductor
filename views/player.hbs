<div class="container__player">
    <div class="player">
        <div class="player__controls">
            <audio class="ads__audio hide" controls="" id="audio-ads"></audio>
            <h5 class="player__title" id="player__title">playing now</h5>
        </div>
        <audio class="player__audio" controls="" id="audio-player" autoplay="true"></audio>
        <div class="player__album">
            <img id="player-image" src="assets/player.png" alt="Album Cover" class="player__img" loading="lazy">
        </div>
        <h3 id="titulo" class="player__song"></h3>
        <div class="player__duration">
            <input id="duration__range" type="range" value="0" class="player__level">
            <div class="audio-duration">
                <div class="start">00:00</div>
                <div class="end">00:00</div>
            </div>
        </div>
        <div class="player__controls">
            <div class="player__btn player__btn--medium play" id="play-button">
                <i id="play-btn" class="fas fa-play play-btn"></i>
            </div>
        </div>
    </div>
</div>
